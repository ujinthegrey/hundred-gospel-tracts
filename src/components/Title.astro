---
interface Props {
    title: string
}
const {title} = Astro.props
---
<div>
    <h1>{title}</h1>
</div>
<style>
    div {
        background-color: var(--bg-accent-2);
        display: flex;
        justify-content: center;
        align-items: center;
        margin-block: 1rem;
        padding: 2rem 1rem;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: 400;
        letter-spacing: .4rem;
        text-transform: uppercase;     
    }
</style>